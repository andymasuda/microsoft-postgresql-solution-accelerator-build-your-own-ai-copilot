{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: API",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "src.api.app:app",
                "--host", "0.0.0.0",
                "--port", "4242",
                "--forwarded-allow-ips", "*",
                "--proxy-headers",
                "--reload"
            ],
            "jinja": true,
            "preLaunchTask": "Install API Dependencies"
        }
    ]
}