
# Stage 1: Build the React app
FROM node:14 AS build
WORKDIR /app
COPY package.json ./
COPY package-lock.json ./
RUN npm install
COPY . ./

ARG SERVICE_API_ENDPOINT_URL
ENV SERVICE_API_ENDPOINT_URL=${SERVICE_API_ENDPOINT_URL}
RUN echo "window._env_ = {API_URL: '${SERVICE_API_ENDPOINT_URL}'}" > ./public/env-config.js

RUN npm run build


# Stage 2: Serve the React app with Nginx
FROM nginx:alpine
COPY --from=build /app/build /usr/share/nginx/html
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]